{
  "compilerOptions": {
    "target": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "moduleResolution": "NodeNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [".next/types/**/*.ts",
    "app/**/*.ts", "components/**/*.ts", "db/**/*.ts", "server/**/*.ts", "types/**/*.tsx",
    "app/**/*.tsx", "components/**/*.ts", "db/**/*.tsx", "server/**/*.tsx", "types/**/*.tsx"],
  "exclude": ["node_modules"]
}
