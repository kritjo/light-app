{
  "compilerOptions": {
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "actions/**/*.ts",
    "app/**/*.ts",
    "components/**/*.ts",
    "db/**/*.ts",
    "server/**/*.ts",
    "types/**/*.ts",
    "actions/**/*.tsx",
    "app/**/*.tsx",
    "components/**/*.ts",
    "db/**/*.tsx",
    "server/**/*.tsx",
    "types/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
